  "private": true,
  "description": "GhostSpeak v2 - Trust Layer for AI Agent Commerce on Solana (2026)",
  "scripts": {
    "dev": "next dev --turbo -p 3333",
    "dev:convex": "bunx convex dev",
    "dev:all": "concurrently \"bun run dev\" \"bun run dev:convex\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:contracts": "cd contracts && bun test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report html-report",
    "test:all": "bun run test:run && bun run test:e2e && bun run test:contracts"
  },
